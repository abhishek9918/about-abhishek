{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "FrontCraft": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "index": "src/index.html",
            "main": "src/main.ts",
            "outputPath": "dist/FrontCraft",
            "customWebpackConfig": {
              "path": "./webpack.config.js"
            },

            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "allowedCommonJsDependencies": ["aos"],
            "assets": [
              { "glob": "**/*", "input": "src/assets", "output": "assets" },
              { "glob": "**/*", "input": "public", "output": "" }
            ],
            "styles": [
              "./src/assets/bootstrap.min.css",
              "./src/assets/aos.css",
              "./src/assets/feature.css",
              "./node_modules/swiper/swiper-bundle.css",
              "src/styles.scss"
            ],
            "scripts": [],
            "stylePreprocessorOptions": {
              "includePaths": ["src/assets"]
            }
          },
          "configurations": {
            "production": {
              "optimization": {
                "styles": {
                  "inlineCritical": true
                }
              },
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2MB",
                  "maximumError": "2MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": true,
              "extractLicenses": false,
              "sourceMap": {
                "scripts": true,
                "styles": true
              }
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "FrontCraft:build:production"
            },
            "development": {
              "buildTarget": "FrontCraft:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/styles.scss"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "c7db4952-143e-48c8-85f6-3b37f2a558b4"
  }
}
